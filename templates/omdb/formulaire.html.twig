<div class="row">
    <h2>Formulaire de recherche</h2>
</div>
<div class="row">
    <form action="{{ url('Recherche') }}" method="get">
        <div class="row">
            <div class="col-md-9">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="mdi mdi-video-vintage"></i> Nom du film</span>
                    </div>
                    <input type="text" class="form-control" name="nom_du_film" placeholder="Saisir nom du film à rechercher" autofocus>
                </div>
            </div>
            <div class="col-md-3">
                <button class="btn btn-primary" type="submit"><i class="mdi mdi-target"></i> Récupérer informations</button>
            </div>
        </div>
    </form>
</div>